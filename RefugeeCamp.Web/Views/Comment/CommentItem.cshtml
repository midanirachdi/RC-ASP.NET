@using RefugeeCamp.Web.Security
@model RefugeeCamp.Domain.Models.comment










<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h3>@Model.user.FullName</h3>
            </div>
            <div class="col-12">
                <p>@Model.body</p>
            </div>
            <div class="col-9"></div>
            <div class="col-3">
                @Model.datePublish<br/>
                <span style="font-weight: 700; font-size: 0.8em;">@Html.ActionLink("Delete","deleteComment","Comment",new{id=Model.id})</span>

            </div>
        </div>
    </div>
</div>
<hr />




