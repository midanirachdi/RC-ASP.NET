@model IEnumerable<RefugeeCamp.Domain.Models.provider>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Providers List";
}
@{ 

}
<br />
<h2>Providers List</h2>
<hr />
<input type="button" value="Add Provider" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Providers")'" />
<hr />
<table class="table table-striped" style="background-color:white;">
    <tr>

        <th>Nom</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@Html.DisplayFor(modelItem => item.nom)</td>
            <td>@Html.DisplayFor(modelItem => item.adresse)</td>
            <td>@Html.DisplayFor(modelItem => item.email)</td>
            <td>@Html.DisplayFor(modelItem => item.tel)</td>
            <td>
                <div>
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Update", "Providers",new { id = item.id   })'">
                        <span class="fa fa-pencil"></span>
                    </button>
                </div>   
            </td>
            <td>
                <div>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Providers",new { id = item.id   })'">
                        <span class="fa fa-trash"></span>
                    </button>
                </div> 
            </td>
        </tr>
    }

</table>
<hr />

<div>
    @Html.ActionLink("Back to Orders List","Index" ,"Commande")
</div>